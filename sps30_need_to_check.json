{
  "sensors": [
    {
      "name": "SPS30 UART",
	  "start_command": "7E 00 00 02 01 03 F9 7E",
      "stop_command": "7E 00 01 00 FE 7E",
      "command": "7E 00 03 00 FC 7E",
      "send_cmd_period": 1,
      "port": {
        "baudRate": 115200,
        "dataBits": 8,
        "stopBits": 1,
        "parity": "none",
        "flowControl": "none"
      },
      "frame": {
        "startByte": "0x7E",
        "endByte": "0x7E",
		"length": 47,
        "stuffing": [
          ["7D 5E", "0x7E"],
          ["7D 5D", "0x7D"],
          ["7D 31", "0x11"],
          ["7D 33", "0x13"]
        ]
      },
      "checksum": {
        "eval": "0xFF - (data.slice(1, 45).reduce((a,b)=>a+b,0) & 0xFF)",
        "compare": "data[45]"
      },
      "data": {
        "PM1.0": {
          "value": "new DataView(new Uint8Array(data.slice(7,11)).buffer).getFloat32(0, false)",
          "unit": "µg/m³"
        },
        "PM2.5": {
          "value": "new DataView(new Uint8Array(data.slice(11,15)).buffer).getFloat32(0, false)",
          "unit": "µg/m³"
        },
        "PM4.0": {
          "value": "new DataView(new Uint8Array(data.slice(15,19)).buffer).getFloat32(0, false)",
          "unit": "µg/m³"
        },
        "PM10.0": {
          "value": "new DataView(new Uint8Array(data.slice(19,23)).buffer).getFloat32(0, false)",
          "unit": "µg/m³"
        }
      }
    }
  ]
}
