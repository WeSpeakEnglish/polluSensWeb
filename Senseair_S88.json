{
	"sensors": [
		{
			"name": "SenseAir S8/S88 LP CO₂ Sensor",
			"command": "FE 04 00 03 00 05 95 C4",
			"send_cmd_period": 2,
			"port": {
				"baudRate": 9600,
				"dataBits": 8,
				"stopBits": 1,
				"parity": "none"
			},
			"frame": {
				"length": 15,
				"startByte": ["0xFE", "0x04"],
				"endByte": "none"
			},
			"data": {
				"CO2": {
					"value": "(data[3] << 8) + data[4]",
					"unit": "ppm",
					"description": "CO₂ concentration"
				},
				"Temperature": {
					"value": "((data[9] << 8) + data[10]) / 100.0",
					"unit": "°C",
					"description": "Sensor temperature"
				},
				"Status": {
					"value": "(data[11] << 8) + data[12]",
					"unit": "flags",
					"description": "Status word (bitmask: error/status flags)"
				}
			},
			"checksum": {
				"type": "modbus-crc16",
				"eval": "data.slice(0,13).reduce((c,b)=>(c^=b,Array.from({length:8},()=>c=(c&1)?(c>>1)^0xA001:c>>1),c),0xFFFF)",
				"compare": "(data[14]<<8)|data[13]"
			}
		}
	]	
}